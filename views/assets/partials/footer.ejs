<script>
/* --------------------- OpenClose Divs ----------------------*/
  $('.box').click(function() {
    var box = $(this);
    var button = $(this).find('button');
    var opbox = $('.opp-box');
    var hiddenItems = box.find('div p');

    box.addClass('active');
    button.fadeIn(0);
    hiddenItems.addClass('display');
    var notActive = $('.box').filter(function() {
      return !($(this).is('.active'));
    });

    opbox.fadeOut(0);
    if(!isMobile()){notActive.fadeOut(0);};

    button.click(function() {
      $(this).data('clicked', true);
    });

    if(button.data('clicked')) {
      box.removeClass('active');
      opbox.fadeIn(0);
      notActive.fadeIn(0);
      button.fadeOut(0);
      hiddenItems.removeClass('display');
      if(isMobile()){mobileCss()};
      button.data('clicked', false);
    }
  });
/* -----------------------------------------------------------*/
  window.addEventListener('resize', function () {
    "use strict";
    if(isMobile()){
      window.location.reload();
    }
  })

  $('.opp-box').each(function(){
    var _this = this;
    var fadeinslowview = new Waypoint({
        element: _this,
        handler: function (direction) {
            $(this.element).animate({'opacity': 1},500)
        },
        offset: '70%'
    });
});

  function isEven(num){
    return (num % 2 == 0);
  }

  function isMobile(){
    return (window.innerWidth <= 800);

  }

  function getNumberOfDivs(){
    var maxVal = 10;
    var minVal = 0;
    var ids = []
    var id = ''

    while(minVal < maxVal){
      id = document.getElementById(minVal);
      if(id){
        ids.push(id)
      }
      minVal++;
    }
    return ids.length;
  }

  function orderDivs(){
    var a = getNumberOfDivs();
    for (var i =0; i < a;i++){
      if(!isEven(i) && !isMobile()){
        document.getElementById(i).classList.add('order')
      }
    }
  }

  function staticMobileType(){
    var element = document.querySelector('#output');
    element.innerHTML = "design, code, create";
  }

  function mobileCss(){
    var b = document.querySelectorAll('.box')
    var ob = document.querySelectorAll('.opp-box')
    b.forEach(function(f){
        f.style.width = '100%';
    })

    ob.forEach(function(f){
        f.style.display = 'none';
    })
  }

  function init(){
    if(!isMobile()){
      runTyping()
    }
    else {
      staticMobileType();
      mobileCss();
    }
    orderDivs();
  }


  init();
</script>
