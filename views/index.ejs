<!DOCTYPE html>
<html lang="en">

<head>
    <% include assets/partials/header %>
    <title>reubensua</title>
</head>

<body>
    <div class="container-fluid">
      <% include assets/partials/nav %>

      <div class="row intro">

        <p id='output'></p>

        <p>You can view my certifications <b><a href="display">here</a></b></p>

      </div>
          <% var count = 0; %>
            <% postlist.forEach(function(post) { %>
              <div class="row flex">
                <div class="col-md-6 box" id="<%- count %>" style="background-color: <%- post.color %>">

                    <h1><%= post.title %></h1>
                    <p>
                      <%= post.preview %>
                    </p>
                    <h3> Technology Used</h3>
                    <p class="postbody">
                      <%= post.tech %>
                    </p>
                    <h3>What I would do Better</h3>
                    <p class="postbody">
                      <%= post.body %>
                    </p>
                  </div>


                <div class="col-md-6 opp-box">
                  <p><u><a href="<%= post.url %>">View the Source Code here</a></u></p>
                </div>
                </div>
              <% count++}); %>
    </div>

    <footer>
        <% include assets/partials/footer %>
        <% include assets/partials/ga %>
    </footer>
</body>

</html>
